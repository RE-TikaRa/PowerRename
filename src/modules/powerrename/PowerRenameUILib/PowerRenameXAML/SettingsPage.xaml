<Page
    x:Class="PowerRenameUI.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24,24,24,32" Spacing="16">
            <StackPanel Spacing="4">
                <TextBlock FontSize="28" FontWeight="SemiBold" Text="设置" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="管理右键菜单注册与显示方式。" />
            </StackPanel>

            <StackPanel
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Spacing="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock FontWeight="Medium" Text="右键菜单注册" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="切换后将以管理员权限执行注册/卸载脚本。"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <ToggleSwitch
                        x:Name="ContextMenuToggle"
                        Grid.Column="1"
                        IsOn="{x:Bind IsContextMenuRegistered, Mode=TwoWay}"
                        OffContent="未注册"
                        OnContent="已注册"
                        Toggled="ContextMenuToggle_Toggled" />
                </Grid>
            </StackPanel>

            <StackPanel
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Spacing="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock FontWeight="Medium" Text="扩展菜单显示" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="开启后仅在「显示更多选项」中显示。"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <ToggleSwitch
                        x:Name="ExtendedMenuToggle"
                        Grid.Column="1"
                        IsOn="{x:Bind ShowInExtendedContextMenu, Mode=TwoWay}"
                        OffContent="普通菜单可见"
                        OnContent="仅扩展菜单"
                        Toggled="ExtendedMenuToggle_Toggled" />
                </Grid>
            </StackPanel>

            <StackPanel
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Spacing="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock FontWeight="Medium" Text="保持上次状态" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="记住上次使用的搜索/替换文本。"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <ToggleSwitch
                        x:Name="PersistStateToggle"
                        Grid.Column="1"
                        IsOn="{x:Bind PersistState, Mode=TwoWay}"
                        Toggled="PersistStateToggle_Toggled" />
                </Grid>
            </StackPanel>

            <StackPanel
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Spacing="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock FontWeight="Medium" Text="启用 MRU 历史" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="在搜索/替换框中显示历史记录。"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <ToggleSwitch
                        x:Name="MRUEnabledToggle"
                        Grid.Column="1"
                        IsOn="{x:Bind MRUEnabled, Mode=TwoWay}"
                        Toggled="MRUEnabledToggle_Toggled" />
                </Grid>
            </StackPanel>

            <StackPanel
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Spacing="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock FontWeight="Medium" Text="使用 Boost 正则库" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="使用 Boost.Regex 替代标准库（更强大但可能更慢）。"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <ToggleSwitch
                        x:Name="UseBoostLibToggle"
                        Grid.Column="1"
                        IsOn="{x:Bind UseBoostLib, Mode=TwoWay}"
                        Toggled="UseBoostLibToggle_Toggled" />
                </Grid>
            </StackPanel>

            <StackPanel
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Spacing="4">
                <StackPanel>
                    <TextBlock FontWeight="Medium" Text="日志" />
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="删除本地日志目录。"
                        TextWrapping="Wrap" />
                </StackPanel>
                <Button
                    Margin="0,8,0,0"
                    Click="ClearLogsButton_Click"
                    Content="删除日志目录" />
            </StackPanel>

            <TextBlock
                x:Name="StatusText"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{x:Bind StatusMessage, Mode=OneWay}" />
        </StackPanel>
    </ScrollViewer>
</Page>
