<Page
    x:Class="PowerRenameUI.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24,24,24,32" Spacing="24">
            <StackPanel Spacing="4">
                <TextBlock FontSize="28" FontWeight="SemiBold" Text="PowerRename" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="批量文件重命名工具，支持正则表达式、元数据和时间戳模式。" />
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button
                    x:Name="LaunchButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Stretch"
                    Click="LaunchButton_Click"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8AC;" FontSize="16" />
                        <TextBlock Text="启动 PowerRename" />
                    </StackPanel>
                </Button>

                <Button
                    x:Name="OpenFolderButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Stretch"
                    Click="OpenFolderButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE838;" FontSize="16" />
                        <TextBlock Text="打开程序目录" />
                    </StackPanel>
                </Button>
            </Grid>

            <StackPanel Spacing="8">
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="功能特性" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,8,8,8" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8FD;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                            <TextBlock FontWeight="Medium" Text="正则表达式" />
                        </StackPanel>
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="使用正则表达式进行高级匹配和替换" TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,8,0,8" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE787;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                            <TextBlock FontWeight="Medium" Text="时间戳模式" />
                        </StackPanel>
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="使用文件创建/修改/访问时间" TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,8,8" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE91B;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                            <TextBlock FontWeight="Medium" Text="EXIF/XMP 元数据" />
                        </StackPanel>
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="从图片中提取相机、拍摄参数等信息" TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,8,0,8" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xEA40;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                            <TextBlock FontWeight="Medium" Text="计数器/随机器" />
                        </StackPanel>
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="自动编号或生成随机字符串" TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,8,8,8" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8B7;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                            <TextBlock FontWeight="Medium" Text="文件夹支持" />
                        </StackPanel>
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="支持文件和文件夹批量重命名" TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,8,0,8" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7BA;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                            <TextBlock FontWeight="Medium" Text="大小写转换" />
                        </StackPanel>
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="大写、小写、首字母大写等" TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="使用方法" />
                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap">
                    <Run Text="1. 在文件资源管理器中选择要重命名的文件或文件夹" />
                    <LineBreak />
                    <Run Text="2. 右键点击，选择「使用 PowerRename 重命名」" />
                    <LineBreak />
                    <Run Text="3. 在搜索框中输入要查找的文本或正则表达式" />
                    <LineBreak />
                    <Run Text="4. 在替换框中输入替换文本（支持模式变量）" />
                    <LineBreak />
                    <Run Text="5. 预览结果后点击「应用」执行重命名" />
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
