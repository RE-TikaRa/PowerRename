<Page
    x:Class="PowerRenameUI.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24,24,24,32" Spacing="24">
            <StackPanel Spacing="4">
                <TextBlock FontSize="28" FontWeight="SemiBold" Text="关于" />
            </StackPanel>

            <StackPanel
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Image
                        Width="64"
                        Height="64"
                        Source="ms-appx:///Assets/PowerRename/PowerRenameUI.ico" />
                    <StackPanel VerticalAlignment="Center" Spacing="4">
                        <TextBlock FontSize="20" FontWeight="SemiBold" Text="PowerRename" />
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="批量文件重命名工具" />
                    </StackPanel>
                </StackPanel>

                <Rectangle
                    Height="1"
                    Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,16,8"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="版本" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        Text="1.0.0 (Standalone)" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,16,8"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="基于" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        Text="Microsoft PowerToys" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,0,16,0"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="许可证" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="MIT License" />
                </Grid>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="链接" />
                <StackPanel Spacing="4">
                    <HyperlinkButton
                        Content="PowerToys GitHub"
                        NavigateUri="https://github.com/microsoft/PowerToys" />
                    <HyperlinkButton
                        Content="PowerRename 文档"
                        NavigateUri="https://aka.ms/PowerToysOverview_PowerRename" />
                    <HyperlinkButton
                        Content="正则表达式帮助"
                        NavigateUri="https://aka.ms/powertoysRegExHelp" />
                </StackPanel>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="致谢" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    TextWrapping="Wrap">
                    <Run Text="PowerRename 最初由 Chris Davis 开发，后被整合到 Microsoft PowerToys 项目中。" />
                    <LineBreak />
                    <LineBreak />
                    <Run Text="本独立版本从 PowerToys 项目中提取，保留了原始功能并添加了独立的设置管理界面。" />
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
